        num = int(input("Vez do X , escolha uma casa: ")) 
       
    if num < 0 or num > 9 or num1 > 1 or num2 >1 or num3 >1 or num4 > 1 or num5 > 1 or num6 > 1 or num7 > 1 or num8 > 1 or num9 > 1:
        print("NUMERO INVALIDO\n")
    if num == 1 and num1 == 0:
        
        if valor2 == 0:
            mat[1]= "O"
            num1 = num1 + 1
            valor = valor + 1 
            valor2 = valor % 2
            c = c - 1
